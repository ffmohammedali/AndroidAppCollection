<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayer.SongPlayer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/songPlayerImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"

            android:src="@drawable/ic_headset_black_24dp"
            />
        <TextView
            android:id="@+id/songPlayerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:maxLines="1"
            android:padding="20dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
        <SeekBar
            android:id="@+id/songPlayerSeekBar"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="40dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/musicPlayerBackward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_fast_backward_black_24dp"
                />
            <Button
                android:id="@+id/musicPlayerPlay"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:background="@drawable/ic_pause_black_24dp"
                />
            <Button
                android:id="@+id/musicPlayerForward"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:background="@drawable/ic_fast_forward_black_24dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>