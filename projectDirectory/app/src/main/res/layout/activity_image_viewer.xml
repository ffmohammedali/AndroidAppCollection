<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imageViewer">
    <ImageView
        android:id="@+id/im"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="96dp"
        android:background="#453F3F"
        app:layout_constraintEnd_toStartOf="@+id/im1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Happy App!"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="96dp"
        android:background="#BCCB24"
        app:layout_constraintEnd_toStartOf="@+id/im2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/im"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <ImageView
        android:id="@+id/im2"
        android:layout_width="103dp"
        android:layout_height="101dp"
        android:layout_marginTop="96dp"
        android:background="#392121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/im1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/im3"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginTop="80dp"
        android:layout_marginEnd="64dp"
        android:background="#9CFAF8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx3" />

    <ImageView
        android:id="@+id/im4"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginTop="84dp"
        android:background="#88883D"
        app:layout_constraintEnd_toStartOf="@+id/im3"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx1" />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image 1"


        app:layout_constraintEnd_toEndOf="@+id/im"
        app:layout_constraintStart_toStartOf="@+id/im"
        app:layout_constraintTop_toBottomOf="@+id/im" />

    <TextView
        android:id="@+id/tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image 2"

        app:layout_constraintEnd_toEndOf="@+id/im1"
        app:layout_constraintStart_toStartOf="@+id/im1"
        app:layout_constraintTop_toBottomOf="@+id/im1" />

    <TextView

        android:id="@+id/tx3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Image 3"
        app:layout_constraintEnd_toEndOf="@+id/im2"
        app:layout_constraintStart_toStartOf="@+id/im2"
        app:layout_constraintTop_toBottomOf="@+id/im2" />


    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="80dp"
        android:text="Image 4"
        app:layout_constraintEnd_toEndOf="@+id/im4"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/im4"
        app:layout_constraintTop_toTopOf="@+id/im4" />

    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Image 5"

        app:layout_constraintEnd_toEndOf="@+id/im3"
        app:layout_constraintStart_toStartOf="@+id/im3"
        app:layout_constraintTop_toBottomOf="@+id/im3" />
</androidx.constraintlayout.widget.ConstraintLayout>